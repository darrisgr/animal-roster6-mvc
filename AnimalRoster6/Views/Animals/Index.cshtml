@using AnimalRoster6.Models;
@model List<Animal>

<h1>Our Animals</h1>
@if (Model.Count == 0)
{
    <h2>Oops! You don't have any animals!<br />Go and add some to the roster, dude.</h2>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th scope="col">
                ID
            </th>
            <th scope="col">
                Name
            </th>
            <th scope="col">
                Species
            </th>
            <th scope="col">
                Description
            </th>
            <th scope="col">
                Image URL
            </th>
        </tr>
        @foreach (var animal in Model)
        {
            <tr>
                <td>@animal.Id</td>
                <td>@animal.Name</td>
                <td>@animal.Species</td>
                <td>@animal.Description</td>
                <td><a href="@animal.ImgUrl">Check Me Out! 😁</a></td>
            </tr>
        }
    </table>
}