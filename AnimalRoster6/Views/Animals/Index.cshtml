<h1>Our Animals</h1>
@if (ViewBag.animals.Count == 0)
{
    <h2>Oops! You don't have any animals!<br />Go and add some to the roster, dude.</h2>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th scope="col">
                Name
            </th>
            <th scope="col">
                Species
            </th>
            <th scope="col">
                Description
            </th>
            <th scope="col">
                Image
            </th>
        </tr>
        @foreach (Dictionary<string, string> animal in ViewBag.animals)
        {
            <tr>
                @foreach (KeyValuePair<string, string> kvp in animal)
                {
                    if (kvp.Key == "imgUrl")
                    {
                        <td><a href="@kvp.Value">Check Me Out!</a></td>
                    }
                    else
                    {
                        <td>@kvp.Value</td>
                    }
                }
            </tr>
        }
    </table>
}