@using AnimalRoster6.ViewModels;
@model AddAnimalViewModel;

<h1>Add An Animal To Your Roster! 🙂</h1>

<form method="post">
    <div asp-controller="Animals" asp-action="Add" class="form-group">
        <label asp-for="Name"><strong>Name</strong></label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div asp-controller="Animals" asp-action="Add" class="form-group">
        <label asp-for="Species"><strong>Species</strong></label>
        <input asp-for="Species" type="text" class="form-control" />
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>

    <div asp-controller="Animals" asp-action="Add" class="form-group">
        <label asp-for="Description"><strong>Description</strong></label>
        <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div asp-controller="Animals" asp-action="Add" class="form-group">
        <label asp-for="CaretakerId"><strong>Caretaker</strong></label><br />
        <select asp-for="CaretakerId" asp-items="Model.Caretakers"></select>
        <span asp-validation-for="CaretakerId" class="text-danger"></span>
    </div>

    <div asp-controller="Animals" asp-action="Add" class="form-group">
        <label asp-for="ImgUrl"><strong>Image URL</strong></label>
        <input asp-for="ImgUrl" type="text" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>
    <input type="submit" value="Add Animal" class="btn btn-primary" style="background-color:chartreuse;" />
</form>