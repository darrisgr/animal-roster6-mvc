@model AnimalRoster6.ViewModels.AnimalDetailViewModel

<h1>@Model.Name</h1>

<table class="table table-striped table-bordered">
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Species</th>
        <td>@Model.Species</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Caretaker</th>
        <td>@Model.Caretaker</td>
    </tr>
    <tr>
        <th>Image</th>
        <td><img src=@Model.ImgUrl width="30%"/></td>
    </tr>
</table>