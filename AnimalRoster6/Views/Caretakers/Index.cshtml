@model List<AnimalRoster6.Models.AnimalCaretaker>

<h1>All Caretakers</h1>
@if (Model.Count == 0)
{
    <h2>Oops! You don't have any caretakers!<br />Go hire some.</h2>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th scope="col">Caretaker ID</th>
        </tr> 
        <tr>
            <th scope="col">Caretaker Name</th>
        </tr> 
        @foreach (AnimalCaretaker caretaker in Model)
        {
            <tr>
                <td>@caretaker.Id</td>
                <td>@caretaker.Name</td>
            </tr>
        }
    </table>
}